<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
      Tema dasar aplikasi.
      Menggunakan parent "DayNight" memungkinkan aplikasi secara otomatis
      beralih antara tema terang dan gelap sesuai pengaturan sistem.
    -->
    <style name="Theme.SmartDoor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna utama aplikasi (Primary Brand Color) -->
        <item name="colorPrimary">#EB1E28</item>
        <item name="colorPrimaryVariant">#EB1E28</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna sekunder aplikasi (Secondary Brand Color) -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Atribut kustom yang bisa Anda gunakan di seluruh aplikasi -->
        <item name="backgroundColor">@color/background_color</item>
        <item name="textColorPrimary">@color/text_color_primary</item>
        <item name="textColorSecondary">@color/text_color_secondary</item>

        <!-- PERBAIKAN: Menggunakan atribut standar Material 3 untuk Card -->
        <!-- Ini akan mengambil nilai dari @color/card_background_color -->
        <item name="colorSurfaceContainer">@color/card_background_color</item>

        <!-- Warna Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
